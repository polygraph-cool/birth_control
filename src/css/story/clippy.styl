    &::before
      background white !important

@keyframes bg
  0%, 100%
    //fill $clippy
    transform translate(0, 5px) scaleY(0.1)
  5%, 95%
    //fill $secondary
    transform translate(0, 0) scaleY(1)


@keyframes pupil
  0%, 100%
    opacity 0
  5%, 95%
    opacity 1

@keyframes speech
  0%, 100%
    transform translate(0, 100px) scaleY(0.1)

  5%, 95%
    transform translate(0, 0) scaleY(1)


