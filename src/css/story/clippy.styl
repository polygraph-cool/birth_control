.clippy
  width 100%
  height 100%
  margin 0 auto
  position fixed
  // right 0
  left: 50%;
  transform: translateX(-50%)
  bottom 0
  pointer-events: none
  +mq('bp-6')
    width 65rem
  //background-color red

  &-character
    position absolute
    bottom -40px
    right 5%
    transform translate(0, 0) scale(2)
    pointer-events all
    .body
      transform translate(0, 0)
      transition transform 300ms
      position relative

      .eyes
        position absolute

        .eye

          &-bg
            animation bg 5s infinite step-start 0s

          &-pupil
            animation pupil 5s infinite step-start 0s

    &.hiding
      .body
        transform translate(0, 20px)
        transition 300ms

      &:hover
        .body
          transform translate(0, 12px)
          transition 300ms

  &-info
    display flex
    justify-content: flex-end
    align-items: center
    position absolute
    width 100%
    height 100%

  &-info-overall
    width 90%
    height 60%
    position relative
    +mq('bp-4')
      max-width 25rem
      width 75%

  .close-info
    //color $white
    height 30px
    width 30px
    background-color: $mid-purple
    border: 2px solid $gray-darkest
    border-radius 50%
    position absolute
    display flex
    align-items: center;
    justify-content: center
    transition 300ms ease
    pointer-events: all
    cursor pointer
    z-index: 20
    top -15px
    left -15px
    opacity 0
    transition 300ms opacity

    &.active
      opacity 1
      transition 300ms

    svg
      transform scale(0.8)
      color $white

    &:hover
      background-color $secondary
      transition 300ms ease


  .info-img
    max-width 250px
    margin 0 auto

  .info-container
    // width 360px
    // height 550px
    background-color: $light-purple
    display flex
    //padding 1rem
    right 5%
    max-height 100%
    //justify-content center
    align-items flex-start
    flex-direction column
    // width 75%
    // max-width 25rem
    // max-height 60%
    overflow hidden
    position absolute
    // top 0
    // left 0
    // transform translate(50%, 50%)
    // background-color: $light-purple
    border 2px solid $mid-purple
    border-radius 10px
    transition 300ms ease
    opacity 0
    visibility hidden



    // &:after
    //   content: '';
    //   position: absolute;
    //   bottom: 0;
    //   left: 75%;
    //   width: 0;
    //   height: 0;
    //   border: 50px solid transparent;
    //   border-top-color: $mid-purple;
    //   border-bottom: 0;
    //   border-right: 0;
    //   margin-left: -10px;
    //   margin-bottom: -50px;

    &.active
      visibility: visible;
      opacity 1
      transition 300ms ease
      pointer-events: all
      position absolute

    &-arrow
      border-style: solid;
      position: absolute;
      border-color: $mid-purple transparent transparent transparent;
      border-width: 15px 15px 0px 15px;
      bottom: -14px;
      right: 70px
      z-index: 500
      opacity 0
      transition 300ms opacity

      &.active
        opacity 1
        transition 300ms

      &:after
        border-color: $light-purple transparent transparent transparent;
        border-style: solid;
        border-width: 13px 13px 0px 13px;
        bottom: 3px;
        content: "";
        position: absolute;
        right: -13px;

    .info-content
      padding 0 1rem

    .info-title
      text-transform: capitalize;
      font-family: Canela Web, serif
      set-type-size('x-large', true)
      text-align: center
      margin 0 auto

    .info-def
      font-family: Atlas Grotesk Web, sans-serif
      set-type-size('small', true)
      margin-bottom 0.25rem

    .info-sub
      font-family: Atlas Grotesk Web, sans-serif
      font-weight 600
      margin-bottom 0

    .info-prose
      font-family Atlas Grotesk Web, sans-serif
      margin-top 0.25rem
      margin-right 0.5rem
      set-type-size('small', true)

    .link-p
      font-family Atlas Grotesk Web, sans-serif
      text-transform uppercase
      background-color $mid-purple
      width 130px
      text-align center
      padding-top 0.1rem
      font-weight 600
      color $white
      border-radius 5px
      margin 0 auto

      &:hover
        background-color $secondary
        transition 300ms ease

    .info-source
      text-transform uppercase
      set-type-size('x-small', true)
      font-family Atlas Grotesk Web, sans-serif


  &-dim
    width 100%
    height 100%
    background-color: $white
    opacity 0
    position fixed

    &.active
      opacity 0.6
      pointer-events: all

  &-speech
    background-color $light-purple
    border 1px solid $mid-purple
    border-radius 5px;
    width 150px;
    text-align center;
    padding 0.2rem 1rem
    position absolute;
    visibility hidden
    right 1%
    bottom 100px
    +mq('bp-6')
      right 2%
    //transition visibility 300ms

    &.active
      visibility visible
      animation-duration 5s
      animation-name speech
      animation-iteration-count: 0


    &-arrow
      border-style: solid;
      position: absolute;
      border-color: $mid-purple transparent transparent transparent;
      border-width: 8px 8px 0px 8px;
      bottom: -8px;
      left: 67px

      &:after
        border-color: $light-purple transparent transparent transparent;
        border-style: solid;
        border-width: 7px 7px 0px 7px;
        bottom: 1px;
        content: "";
        position: absolute;
        left: -7px;

    .welcome-title
      set-type-size('small', true)
      text-transform uppercase
      font-weight 600
      font-family Atlas Grotesk Web, sans-serif
      color $secondary
      margin 0.5rem 0

    .welcome-text
      set-type-size('small', true)
      font-family Atlas Grotesk Web, sans-serif
      margin 0.5rem 0

    .welcome-close
      margin-bottom 0.5rem
      margin-top 0rem

      span
        font-family Atlas Grotesk Web, sans-serif
        font-weight 600
        set-type-size('small', true)
        background-color $secondary
        padding 0.25rem
        border-radius 5px
        margin 0.25rem 0
        color $white
        transition background-color 300ms
        pointer-events all
        cursor pointer

        &:hover
          background-color $dark
          color $white
          transition background-color 300ms


