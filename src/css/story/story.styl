/* CUSTOM STORY STYLE */

.graphic
  margin 1rem auto 4rem auto

  &-title
    font-family Atlas Grotesk Web, sans-serif
    color $off-black
    font-weight 600
    font-size 16px
    margin 0
    padding 0 1rem

  &-sub
    font-family Atlas Grotesk Web, sans-serif
    color $gray-dark
    font-weight 300
    set-type-size('x-small', true)
    text-transform uppercase
    margin 0 0 1rem 0
    padding 0 1rem

  &-half-title
      font-family Atlas Grotesk Web, sans-serif
      color $off-black
      font-weight 600
      font-size 16px
      margin 0
      padding 0

  &-half-sub
    font-family Atlas Grotesk Web, sans-serif
    color $gray
    font-weight 300
    set-type-size('x-small', true)
    text-transform uppercase
    margin 0 0 1rem 0
    padding 0
