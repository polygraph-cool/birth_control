.sideEffects


  &-text

    .sideEffects
      color $primary
      font-weight 600
      // padding 0.25rem
      // border-radius 5px
      // color $white

    .weightGain
      color $primary
      font-weight 600
      // padding 0.25rem
      // border-radius 5px
      // color $white

    .pain
      color $secondary
      font-weight 600
      // padding 0.25rem
      // border-radius 5px
      // color $white

    .bleeding
      color darken($quaternary, 5)
      font-weight 600
      // padding 0.25rem
      // border-radius 5px
      // color $white

  .graphic
    max-width 50rem

    .sideEffects-titles
      max-width $column-width
      margin 2rem auto 1rem auto

    .container
      display flex
      flex-wrap wrap
      justify-content: space-between;
      margin 1rem

      .chart-legend
        margin-bottom 0.5rem
        .method-type
          font-family Atlas Grotesk Web, sans-serif
          font-weight 600
          text-transform uppercase

        .method-total
          font-family Atlas Grotesk Web, sans-serif
          set-type-size('x-small', true)
          color $gray
          text-transform: uppercase;

        .bullet
          color $primary
          margin 0 0.5rem

      .chart
        width 350px
        margin-bottom 1rem
        padding 0.5rem
        +mq('bp-4')
          width 375px

        &:hover
          box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
          transition 300ms

        .g-vis
          .g-label
            .label-text-bg
              fill none
              stroke $white
              stroke-width 5px

          .g-bar
            .bar
              fill $dark
            &.pain
              .bar
                fill $secondary !important
              .label-text
                fill $secondary
                font-weight 600
            &.sideEffect
              .bar
                fill $primary !important
              .label-text
                fill $primary
                font-weight 600
            &.weight
              .bar
                fill $primary !important
              .label-text
                fill $primary
                font-weight 600
            &.bleeding
              .bar
                fill $quaternary !important
              .label-text
                fill darken($quaternary, 10)
                font-weight 600


        .g-axis
          .domain
            display none
          .tick
            line
              stroke $gray-light
              stroke-width 1px
              stroke-dasharray 5px 5px
            text
              set-type-size('xx-small', true)
              font-family Atlas Grotesk Web, sans-serif
              fill $gray
              text-transform uppercase
